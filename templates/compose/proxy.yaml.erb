version: '3.6'

services:
  proxy:
    restart: always
    image: traefik:1.7.6
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - ../config/traefik.toml:/etc/traefik/traefik.toml:ro
      - ../config/acme.json:/acme.json
    networks:
      lb:
        aliases:
          - traefik-<%= @config['app']['name'].downcase %>
      default: {}

networks:
  lb:
    external: true
